pipeline{
    agent any
    stages{
        stage('git checkout'){
            steps{
                git branch: 'master', url: 'https://github.com/chowdarybvsn/e-2-e.git'
            }
        }
        stage('mvn install'){
            steps{
                sh 'mvn clean package install'
            }
        }
        stage('mvn test'){
            steps{
               sh 'mvn test'
            }
        }
        stage('sonar scan'){
            steps{
               script{
                  withSonarQubeEnv(credentialsId: 'mysonar') {
                       sh 'mvn sonar:sonar'
                  }
               }
            }
        }
        stage('quality gates'){
            steps{
               script{
                waitForQualityGate abortPipeline: false, credentialsId: 'mysonar'
               }
            }
        }
        
    }      
}